---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// Form options
const eventTypes = [
  "Reportaż ślubny",
  "Sesja poślubna",
  "Sesja narzeczeńska",
  "Reportaż chrztu",
  "Sesja plenerowa",
  "Inne",
];
---

<BaseLayout
  title="Kontakt | Fiodorow Photography"
  description="Skontaktuj się z nami. Fotograf Siedlce, Białystok, Warszawa. Telefon: +48 600 872 127"
>
  <Header currentPath="/kontakt" />

  <main class="pt-24 pb-12 md:pt-32 md:pb-20 bg-cream">
    <!-- Hero Text -->
    <div
      class="max-w-5xl mx-auto px-6 text-center mb-12 md:mb-16 animate-fade-in-up"
    >
      <h1
        class="font-serif !text-3xl md:!text-4xl lg:!text-5xl text-charcoal mb-4 md:mb-6 tracking-wide"
      >
        Stwórzmy razem coś <i class="font-light italic text-olive">pięknego</i>
      </h1>
      <p
        class="text-charcoal-light text-xs md:text-sm leading-relaxed max-w-2xl mx-auto font-light"
      >
        Jesteśmy tu, aby uwiecznić Wasze najważniejsze chwile. Napiszcie do nas,
        zadzwońcie lub umówcie się na kawę.
      </p>
    </div>

    <div class="max-w-[1800px] mx-auto px-6 md:px-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <!-- Contact Info Card (Left/Top) -->
        <div
          class="lg:col-span-4 lg:sticky lg:top-32 space-y-6 animate-fade-in-left"
        >
          <!-- Info Box -->
          <div
            class="bg-white rounded-xl shadow-lg shadow-black/5 p-6 md:p-8 border border-white/50 backdrop-blur-sm"
          >
            <h2
              class="font-serif !text-base tracking-[0.2em] uppercase text-charcoal mb-6 border-b border-charcoal/10 pb-4"
            >
              Dane <i class="font-light italic text-olive">kontaktowe</i>
            </h2>

            <div class="space-y-6">
              <!-- Location -->
              <div class="flex items-start gap-3 group">
                <div
                  class="w-8 h-8 rounded-full bg-cream-dark flex items-center justify-center flex-shrink-0 text-olive group-hover:scale-110 transition-transform duration-300"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                  >
                </div>
                <div>
                  <h3
                    class="font-serif text-xs tracking-widest uppercase text-charcoal mb-1"
                  >
                    Obszar działania
                  </h3>
                  <p
                    class="text-charcoal-light text-xs leading-relaxed font-light"
                  >
                    Siedlce, Białystok, Warszawa.<br />
                    Dojedziemy w każde miejsce w Polsce.
                  </p>
                </div>
              </div>

              <!-- Phones -->
              <div class="flex items-start gap-3 group">
                <div
                  class="w-8 h-8 rounded-full bg-cream-dark flex items-center justify-center flex-shrink-0 text-olive group-hover:scale-110 transition-transform duration-300"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path></svg
                  >
                </div>
                <div>
                  <h3
                    class="font-serif text-xs tracking-widest uppercase text-charcoal mb-1"
                  >
                    Telefony
                  </h3>
                  <div class="space-y-1">
                    <a
                      href="tel:+48600872127"
                      class="block text-charcoal-light hover:text-olive transition-colors text-xs font-light"
                      >+48 600 872 127</a
                    >
                    <a
                      href="tel:+48515651646"
                      class="block text-charcoal-light hover:text-olive transition-colors text-xs font-light"
                      >+48 515 651 646</a
                    >
                  </div>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-3 group">
                <div
                  class="w-8 h-8 rounded-full bg-cream-dark flex items-center justify-center flex-shrink-0 text-olive group-hover:scale-110 transition-transform duration-300"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path></svg
                  >
                </div>
                <div>
                  <h3
                    class="font-serif text-xs tracking-widest uppercase text-charcoal mb-1"
                  >
                    Email
                  </h3>
                  <a
                    href="mailto:fiodorowphotography@gmail.com"
                    class="block text-charcoal-light hover:text-olive transition-colors text-xs font-light break-all"
                  >
                    fiodorowphotography@gmail.com
                  </a>
                </div>
              </div>

              <!-- Socials -->
              <div class="pt-6 border-t border-charcoal/5">
                <h3
                  class="font-serif text-[0.6rem] uppercase tracking-[0.25em] text-charcoal mb-4"
                >
                  Znajdź nas na
                </h3>
                <div class="flex gap-3">
                  <a
                    href="https://instagram.com/fiodorowphotography"
                    target="_blank"
                    class="w-8 h-8 rounded-full bg-charcoal text-white flex items-center justify-center hover:bg-olive transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-1"
                    aria-label="Instagram"
                  >
                    <svg
                      class="w-3.5 h-3.5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"
                      ></path></svg
                    >
                  </a>
                  <a
                    href="https://facebook.com/fiodorowphotography"
                    target="_blank"
                    class="w-8 h-8 rounded-full bg-charcoal text-white flex items-center justify-center hover:bg-olive transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-1"
                    aria-label="Facebook"
                  >
                    <svg
                      class="w-3.5 h-3.5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                      ></path></svg
                    >
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Map Preview -->
          <div
            class="rounded-xl shadow-lg shadow-black/5 overflow-hidden h-64 grayscale hover:grayscale-0 transition-all duration-500 border border-white/50"
          >
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2447.3815267585055!2d22.289457499999997!3d52.163756400000004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471f5b8c194a2613%3A0x1595c46df6b04c22!2sFiodorow%20Photography!5e0!3m2!1spl!2spl!4v1770225249373!5m2!1spl!2spl"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>

        <!-- Contact Form (Right/Main) -->
        <div
          class="lg:col-span-8 animate-fade-in-up"
          style="animation-delay: 100ms"
        >
          <div
            class="bg-white rounded-xl shadow-lg shadow-black/5 p-8 md:p-12 border border-white/50"
          >
            <h2
              class="font-serif text-base tracking-[0.2em] uppercase text-charcoal mb-8 border-b border-charcoal/10 pb-4"
            >
              Formularz <i class="font-light italic text-olive">kontaktowy</i>
            </h2>

            <form id="contact-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div class="space-y-2">
                  <label
                    for="firstName"
                    class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                    >Imię *</label
                  >
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all placeholder:text-charcoal/20 text-xs font-light"
                    placeholder="Twoje imię"
                  />
                </div>

                <!-- Surname -->
                <div class="space-y-2">
                  <label
                    for="lastName"
                    class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                    >Nazwisko *</label
                  >
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all placeholder:text-charcoal/20 text-xs font-light"
                    placeholder="Twoje nazwisko"
                  />
                </div>
              </div>

              <!-- Email & Phone -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                  <label
                    for="email"
                    class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                    >Email *</label
                  >
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all placeholder:text-charcoal/20 text-xs font-light"
                    placeholder="adres@email.com"
                  />
                </div>
                <div class="space-y-2">
                  <label
                    for="phone"
                    class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                    >Numer telefonu</label
                  >
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all placeholder:text-charcoal/20 text-xs font-light"
                    placeholder="+48 000 000 000"
                  />
                </div>
              </div>

              <!-- Event Type & Date -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                  <label
                    for="eventType"
                    class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                    >Wydarzenie *</label
                  >
                  <div class="relative">
                    <select
                      id="eventType"
                      name="eventType"
                      required
                      class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all appearance-none cursor-pointer text-xs font-light"
                    >
                      <option value="" disabled selected
                        >Wybierz rodzaj sesji...</option
                      >
                      {
                        eventTypes.map((type) => (
                          <option value={type}>{type}</option>
                        ))
                      }
                    </select>
                    <!-- Custom Arrow -->
                    <div
                      class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-charcoal-light"
                    >
                      <svg
                        class="w-3 h-3"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 9l-7 7-7-7"></path></svg
                      >
                    </div>
                  </div>
                </div>

                <div class="space-y-2">
                  <label
                    for="eventDate"
                    class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                    >Data reportażu</label
                  >
                  <input
                    type="date"
                    id="eventDate"
                    name="eventDate"
                    class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all text-charcoal-light cursor-pointer text-xs font-light"
                  />
                </div>
              </div>

              <!-- Message -->
              <div class="space-y-2">
                <label
                  for="message"
                  class="text-[0.65rem] font-bold tracking-[0.15em] uppercase text-charcoal-light"
                  >Wiadomość *</label
                >
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-2 bg-cream/30 border border-charcoal/10 rounded focus:border-olive focus:ring-1 focus:ring-olive focus:bg-white outline-none transition-all placeholder:text-charcoal/20 resize-none text-xs font-light"
                  placeholder="Opowiedzcie nam o Waszych planach, marzeniach i oczekiwaniach..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div class="pt-4">
                <button
                  type="submit"
                  id="submit-btn"
                  class="w-full md:w-auto px-10 py-3 bg-charcoal text-white font-serif tracking-[0.2em] uppercase text-xs rounded hover:bg-olive transition-all duration-300 shadow-lg shadow-charcoal/20 hover:shadow-olive/30 transform hover:-translate-y-0.5 flex items-center justify-center gap-3 group"
                >
                  <span>Wyślij wiadomość</span>
                  <svg
                    class="w-3 h-3 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                  >
                </button>
              </div>

              <div
                id="form-message"
                class="hidden rounded p-4 text-sm text-center"
              >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in-left {
    animation: fadeInLeft 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const formMessage = document.getElementById("form-message") as HTMLDivElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Initial state
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.innerHTML = "<span>Wysyłanie...</span>";
    submitBtn.disabled = true;
    formMessage.classList.add("hidden");
    formMessage.className = "hidden rounded-lg p-4 text-sm text-center";

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    try {
      // Simulate API call for now (or implement actual endpoint)
      // await new Promise(resolve => setTimeout(resolve, 1500));

      const response = await fetch("/api/contact", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        formMessage.textContent =
          "Dziękujemy! Wiadomość została wysłana. Odpowiemy najszybciej jak to możliwe.";
        formMessage.classList.remove("hidden");
        formMessage.classList.add(
          "bg-olive/10",
          "text-olive",
          "border",
          "border-olive/20",
        );
        form.reset();
      } else {
        throw new Error(result.error || "Failed to send");
      }
    } catch (error) {
      formMessage.textContent =
        "Przepraszamy, wystąpił błąd. Spróbuj ponownie lub skontaktuj się telefonicznie.";
      formMessage.classList.remove("hidden");
      formMessage.classList.add(
        "bg-red-50",
        "text-red-600",
        "border",
        "border-red-100",
      );
    } finally {
      submitBtn.innerHTML = originalBtnText;
      submitBtn.disabled = false;
    }
  });
</script>
