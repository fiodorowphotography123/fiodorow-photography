---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Kontakt | Fiodorow Photography" 
  description="Skontaktuj się z nami. Fotograf Siedlce, Białystok, Warszawa. Telefon: +48 600 872 127"
>
  <Header currentPath="/kontakt" />
  
  <!-- Contact Section -->
  <section class="pt-32 pb-20 md:pt-40 md:pb-32 bg-white">
    <div class="max-w-6xl mx-auto px-6 md:px-12">
      <div class="text-center mb-16">
        <h1 class="section-title mb-4">Kontakt</h1>
        <p class="text-charcoal-light text-sm md:text-base max-w-md mx-auto">
          Chętnie odpowiemy na Wasze pytania i omówimy szczegóły sesji.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        <!-- Contact Info -->
        <div class="space-y-10">
          <div>
            <h2 class="font-serif text-lg tracking-[0.15em] uppercase mb-6">Dane kontaktowe</h2>
            <div class="space-y-4">
              <a href="tel:+48600872127" class="flex items-center gap-4 text-charcoal-light hover:text-olive transition-colors group">
                <span class="w-12 h-12 flex items-center justify-center border border-charcoal/20 group-hover:border-olive transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </span>
                <span>+48 600 872 127</span>
              </a>
              
              <a href="tel:+48515651646" class="flex items-center gap-4 text-charcoal-light hover:text-olive transition-colors group">
                <span class="w-12 h-12 flex items-center justify-center border border-charcoal/20 group-hover:border-olive transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </span>
                <span>+48 515 651 646</span>
              </a>
              
              <a href="mailto:fiodorowphotography@gmail.com" class="flex items-center gap-4 text-charcoal-light hover:text-olive transition-colors group">
                <span class="w-12 h-12 flex items-center justify-center border border-charcoal/20 group-hover:border-olive transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </span>
                <span>fiodorowphotography@gmail.com</span>
              </a>
            </div>
          </div>
          
          <div>
            <h2 class="font-serif text-lg tracking-[0.15em] uppercase mb-6">Lokalizacja</h2>
            <p class="text-charcoal-light text-sm leading-relaxed">
              Siedlce (08-110), województwo mazowieckie<br />
              Działamy również w Białymstoku i Warszawie
            </p>
          </div>
          
          <div>
            <h2 class="font-serif text-lg tracking-[0.15em] uppercase mb-6">Social Media</h2>
            <div class="flex items-center gap-4">
              <a 
                href="https://facebook.com/fiodorowphotography" 
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 flex items-center justify-center border border-charcoal/20 text-charcoal hover:border-olive hover:text-olive transition-colors"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a 
                href="https://instagram.com/fiodorowphotography" 
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 flex items-center justify-center border border-charcoal/20 text-charcoal hover:border-olive hover:text-olive transition-colors"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="bg-cream-dark p-8 md:p-12">
          <h2 class="font-serif text-lg tracking-[0.15em] uppercase mb-8">Napisz do nas</h2>
          
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-xs tracking-wider uppercase text-charcoal mb-2">
                Imię i nazwisko *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 bg-white border border-charcoal/10 focus:border-olive focus:outline-none transition-colors text-sm"
                placeholder="Anna Kowalska"
              />
            </div>
            
            <div>
              <label for="email" class="block text-xs tracking-wider uppercase text-charcoal mb-2">
                Email *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 bg-white border border-charcoal/10 focus:border-olive focus:outline-none transition-colors text-sm"
                placeholder="anna@example.com"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-xs tracking-wider uppercase text-charcoal mb-2">
                Telefon
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 bg-white border border-charcoal/10 focus:border-olive focus:outline-none transition-colors text-sm"
                placeholder="+48 123 456 789"
              />
            </div>
            
            <div>
              <label for="date" class="block text-xs tracking-wider uppercase text-charcoal mb-2">
                Planowana data sesji
              </label>
              <input 
                type="date" 
                id="date" 
                name="date"
                class="w-full px-4 py-3 bg-white border border-charcoal/10 focus:border-olive focus:outline-none transition-colors text-sm"
              />
            </div>
            
            <div>
              <label for="service" class="block text-xs tracking-wider uppercase text-charcoal mb-2">
                Rodzaj sesji
              </label>
              <select 
                id="service" 
                name="service"
                class="w-full px-4 py-3 bg-white border border-charcoal/10 focus:border-olive focus:outline-none transition-colors text-sm"
              >
                <option value="">Wybierz...</option>
                <option value="Reportaż ślubny">Reportaż ślubny</option>
                <option value="Sesja narzeczeńska">Sesja narzeczeńska</option>
                <option value="Sesja portretowa">Sesja portretowa</option>
                <option value="Sesja rodzinna">Sesja rodzinna</option>
                <option value="Sesja biznesowa">Sesja biznesowa</option>
                <option value="Fotografia eventowa">Fotografia eventowa</option>
                <option value="Inne">Inne</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-xs tracking-wider uppercase text-charcoal mb-2">
                Wiadomość *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 bg-white border border-charcoal/10 focus:border-olive focus:outline-none transition-colors text-sm resize-none"
                placeholder="Opowiedzcie nam o swoich planach..."
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              id="submit-btn"
              class="btn-primary w-full text-center"
            >
              Wyślij wiadomość
            </button>
            
            <div id="form-message" class="hidden text-center py-4"></div>
          </form>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</BaseLayout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const formMessage = document.getElementById('form-message') as HTMLDivElement;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    submitBtn.textContent = 'Wysyłanie...';
    submitBtn.disabled = true;
    formMessage.classList.add('hidden');
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      const result = await response.json();
      
      if (response.ok) {
        formMessage.textContent = 'Dziękujemy! Wiadomość została wysłana. Odpowiemy najszybciej jak to możliwe.';
        formMessage.className = 'text-center py-4 text-olive';
        form.reset();
      } else {
        throw new Error(result.error || 'Failed to send');
      }
    } catch (error) {
      formMessage.textContent = 'Przepraszamy, wystąpił błąd. Spróbuj ponownie lub skontaktuj się telefonicznie.';
      formMessage.className = 'text-center py-4 text-red-600';
    } finally {
      submitBtn.textContent = 'Wyślij wiadomość';
      submitBtn.disabled = false;
      formMessage.classList.remove('hidden');
    }
  });
</script>
