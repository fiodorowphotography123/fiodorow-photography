---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import Hero from '../components/Hero.astro';
import { getLatestPortfolio, urlFor, categoryLabels } from '../lib/sanity';
import { Image } from "astro:assets";
import aboutImg from "../assets/home/nasze2.jpg";

// Fetch latest 3 portfolio items from Sanity
let sanityItems: any[] = [];
try {
  sanityItems = await getLatestPortfolio(3);
} catch (e) {
  console.log('Sanity fetch failed, using fallback data');
}

// Fallback static data
const fallbackItems = [
  {
    image: "https://images.unsplash.com/photo-1594463750939-ebb28c3f7f75?w=1200&q=90",
    category: "reportaz-slubny",
    title: "Joanna & Darek",
    slug: { current: "joanna-darek" },
    date: "2024-06-08"
  },
  {
    image: "https://images.unsplash.com/photo-1522673607200-164d1b6ce486?w=1200&q=90",
    category: "sesja-narzeczenska",
    title: "Natalia & Michał",
    slug: { current: "natalia-michal" },
    date: "2024-05-15"
  },
  {
    image: "https://images.unsplash.com/photo-1606216794074-735e91aa2c92?w=1200&q=90",
    category: "reportaz-slubny",
    title: "Amelia & Damian",
    slug: { current: "amelia-damian" },
    date: "2024-07-22"
  }
];

// Use Sanity data if available
const portfolioItems = sanityItems.length > 0 ? sanityItems.map(item => ({
  image: item.coverImage ? urlFor(item.coverImage).width(1200).quality(90).url() : fallbackItems[0].image,
  category: item.category,
  title: item.title,
  slug: item.slug,
  date: item.date
})) : fallbackItems;
---

<BaseLayout title="Fiodorow Photography | Fotograf Siedlce, Białystok, Warszawa">
  <Header currentPath="/" />
  
  <!-- Hero Section -->
  <Hero />
  
  <!-- Portfolio Section - Asymmetric Grid with Hover Effects -->
  <section class="py-20 md:py-32 bg-cream">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      
      <!-- Asymmetric Grid Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-16">
        
        <!-- Left Column: Title + Single Large Item (Centered) -->
        <div class="flex flex-col relative lg:h-full lg:justify-center">
          <!-- Moved Title and Subtitle Here -->
          <div class="text-left mb-12 lg:mb-0 lg:absolute lg:top-0 lg:left-0 lg:w-full z-20">
            <h2 class="font-serif text-2xl md:text-3xl tracking-[0.2em] uppercase text-charcoal mb-4">
              Portfolio
            </h2>
            <p class="text-charcoal-light text-sm max-w-sm italic font-serif">
              Odkryj więcej! Kliknij w poniższe kadry, aby zobaczyć skróty reportaży i sesji pełnych emocji.
            </p>
          </div>

          <!-- Left Item (Centered in remaining height) -->
          {portfolioItems[0] && (
            <a 
              href={`/portfolio/${portfolioItems[0].slug.current}`} 
              class="portfolio-item group block w-full relative overflow-hidden"
              style="animation-delay: 0ms"
            >
              <div class="relative w-full aspect-[3/4] overflow-hidden">
                <img 
                  src={portfolioItems[0].image}
                  alt={portfolioItems[0].title}
                  class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
                  loading="eager"
                />
                
                <!-- Overlay with Content -->
                <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-between p-8">
                    <!-- Centered Plus Icon -->
                    <div class="flex-1 flex items-center justify-center">
                        <span class="text-white text-5xl font-light transform scale-75 group-hover:scale-100 transition-transform duration-500">+</span>
                    </div>

                    <!-- Bottom Text -->
                    <div class="text-left transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 delay-100">
                        <span class="text-[0.65rem] tracking-[0.25em] uppercase text-white/90 block mb-2">
                        {categoryLabels[portfolioItems[0].category] || portfolioItems[0].category}
                        </span>
                        <h3 class="font-serif text-2xl md:text-3xl tracking-[0.1em] uppercase text-white">
                        {portfolioItems[0].title}
                        </h3>
                    </div>
                </div>
              </div>
            </a>
          )}
        </div>
        
        <!-- Right Column: Two Stacked Items -->
        <div class="flex flex-col gap-12 md:gap-16">
          {portfolioItems.slice(1, 3).map((item, index) => (
            <a 
              href={`/portfolio/${item.slug.current}`} 
              class="portfolio-item group block relative overflow-hidden"
              style={`animation-delay: ${(index + 1) * 100}ms`}
            >
              <div class="relative w-full aspect-[3/4] overflow-hidden">
                <img 
                  src={item.image}
                  alt={item.title}
                  class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
                  loading="lazy"
                />

                <!-- Overlay with Content -->
                <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-between p-8">
                    <!-- Centered Plus Icon -->
                    <div class="flex-1 flex items-center justify-center">
                        <span class="text-white text-4xl font-light transform scale-75 group-hover:scale-100 transition-transform duration-500">+</span>
                    </div>

                    <!-- Bottom Text -->
                    <div class="text-left transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500 delay-100">
                        <span class="text-[0.65rem] tracking-[0.25em] uppercase text-white/90 block mb-2">
                        {categoryLabels[item.category] || item.category}
                        </span>
                        <h3 class="font-serif text-xl md:text-2xl tracking-[0.1em] uppercase text-charcoal group-hover:text-olive transition-colors duration-300">
                        <span class="text-white">{item.title}</span>
                        </h3>
                    </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="text-center mt-12">
        <a href="/portfolio" class="btn-primary">
          Zobacz wszystkie
        </a>
      </div>
    </div>
  </section>
  
  <!-- Duo Section (Replaces About Teaser) -->
  <section class="py-20 md:py-32 bg-white overflow-hidden">
    <div class="max-w-[1600px] mx-auto px-6 md:px-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-center">
        
        <!-- Image Side with Badge -->
        <div class="relative group animate-fade-in-up order-2 md:order-1 lg:col-span-7">
          <!-- Decorative Elements -->
          <div class="absolute top-8 -right-8 w-full h-full border border-charcoal/10 rounded-sm -z-10 transition-transform duration-700 group-hover:translate-x-2 group-hover:-translate-y-2 hidden md:block"></div>
          <div class="absolute -bottom-12 -left-12 w-3/4 h-3/4 bg-olive/10 rounded-full blur-3xl -z-20 mix-blend-multiply"></div>
          
          <div class="relative z-10">
            <Image 
              src={aboutImg} 
              alt="Mateusz i Weronika - Duet Fotografów" 
              class="w-full h-auto aspect-[3/2] object-cover object-center rounded-sm shadow-2xl transition-transform duration-1000 group-hover:scale-[1.02]" 
            />
             <!-- Duo Badge Removed -->
          </div>
        </div>
        
        <!-- Text Side -->
        <div class="order-1 md:order-2 animate-fade-in-up lg:col-span-5" style="animation-delay: 300ms;">
          <span class="text-olive text-xs font-bold tracking-[0.2em] uppercase mb-4 block">Dlaczego My?</span>
          <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-charcoal mb-8 leading-tight">
            Duet w życiu <br/> <i class="font-light italic text-olive font-serif">i w fotografii</i>
          </h2>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-6">
            Jesteśmy Mateusz i Weronika. Dwa spojrzenia, dwie wrażliwości, jedna wspólna pasja. 
            Jako <strong>duet fotograficzny</strong> oferujemy Wam coś więcej niż tylko zdjęcia – dajemy Wam pewność, że żaden ważny moment nie umknie.
          </p>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-10">
            Kiedy Mateusz skupia się na szerokim planie i technicznej doskonałości, Weronika wyłapuje ukradkowe spojrzenia, detale i wzruszenia Waszych bliskich. Dzięki temu stworzymy dla Was historię, która jest pełna i wielowymiarowa.
          </p>
          <a href="/o-nas" class="btn-primary">
            Poznaj naszą historię
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Mood Gallery / Visual Strip -->
  <section class="py-20 bg-cream border-t border-charcoal/5">
     <div class="max-w-[1800px] mx-auto px-6">
        <div class="text-center mb-16">
          <span class="text-[0.65rem] tracking-[0.25em] uppercase text-charcoal-light/80 block mb-3">
             Moments & Details
          </span>
          <h2 class="font-serif text-2xl md:text-3xl text-charcoal tracking-[0.1em]">
             Więcej niż zdjęcia
          </h2>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
            <!-- Image 1 -->
            <div class="aspect-[3/4] overflow-hidden rounded-sm group relative animate-fade-in-up" style="animation-delay: 0ms;">
               <img src="https://images.unsplash.com/photo-1519741497674-611481863552?w=800&q=80" 
                    alt="Wedding Detail" 
                    class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" 
                    loading="lazy" />
               <div class="absolute inset-0 bg-charcoal/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
            
            <!-- Image 2 (Staggered) -->
            <div class="aspect-[3/4] overflow-hidden rounded-sm group mt-12 md:mt-24 relative animate-fade-in-up" style="animation-delay: 100ms;">
               <img src="https://images.unsplash.com/photo-1510076857177-7470076d4098?w=800&q=80" 
                    alt="Emotional Moment" 
                    class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 grayscale group-hover:grayscale-0 transition-all duration-700" 
                    loading="lazy" />
            </div>

            <!-- Image 3 -->
            <div class="aspect-[3/4] overflow-hidden rounded-sm group relative animate-fade-in-up" style="animation-delay: 200ms;">
               <img src="https://images.unsplash.com/photo-1606800052052-a08af7148866?w=800&q=80" 
                    alt="Couple Portrait" 
                    class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" 
                    loading="lazy" />
            </div>

            <!-- Image 4 (Staggered) -->
            <div class="aspect-[3/4] overflow-hidden rounded-sm group mt-12 md:mt-24 relative animate-fade-in-up" style="animation-delay: 300ms;">
               <img src="https://images.unsplash.com/photo-1515934751635-c81c6bc9a2d8?w=800&q=80" 
                    alt="Wedding Celebrate" 
                    class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 grayscale group-hover:grayscale-0 transition-all duration-700" 
                    loading="lazy" />
            </div>
        </div>
     </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 md:py-24 bg-cream-dark">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="section-title mb-6">
        Opowiedzcie nam swoją historię
      </h2>
      <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-10 max-w-xl mx-auto">
        Każda sesja to dla nas nowe wyzwanie i nowa przygoda. 
        Skontaktujcie się z nami i pozwólcie nam uwiecznić Wasze najważniejsze chwile.
      </p>
      <a href="/kontakt" class="btn-primary">
        Skontaktuj się
      </a>
    </div>
  </section>
  
  <Footer />
</BaseLayout>

<style>
  .animate-fade-in-up, .portfolio-item {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    will-change: opacity, transform;
  }
  
  .animate-active {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<!-- Add simple parallax script or similar intersection observer for fade-ins if needed -->
<script>
  // Simple intersection observer for fade-in animations
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-active');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.addEventListener('DOMContentLoaded', () => {
    const animatedElements = document.querySelectorAll('.animate-fade-in-up, .portfolio-item');
    animatedElements.forEach(el => observer.observe(el));
  });
</script>
