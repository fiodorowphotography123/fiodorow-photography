---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import Hero from '../components/Hero.astro';
import { getLatestPortfolio, urlFor, categoryLabels } from '../lib/sanity';

// Fetch latest 3 portfolio items from Sanity
let sanityItems: any[] = [];
try {
  sanityItems = await getLatestPortfolio(3);
} catch (e) {
  console.log('Sanity fetch failed, using fallback data');
}

// Fallback static data
const fallbackItems = [
  {
    image: "https://images.unsplash.com/photo-1594463750939-ebb28c3f7f75?w=1200&q=90",
    category: "reportaz-slubny",
    title: "Joanna & Darek",
    slug: { current: "joanna-darek" },
    date: "2024-06-08"
  },
  {
    image: "https://images.unsplash.com/photo-1522673607200-164d1b6ce486?w=1200&q=90",
    category: "sesja-narzeczenska",
    title: "Natalia & Michał",
    slug: { current: "natalia-michal" },
    date: "2024-05-15"
  },
  {
    image: "https://images.unsplash.com/photo-1606216794074-735e91aa2c92?w=1200&q=90",
    category: "reportaz-slubny",
    title: "Amelia & Damian",
    slug: { current: "amelia-damian" },
    date: "2024-07-22"
  }
];

// Use Sanity data if available
const portfolioItems = sanityItems.length > 0 ? sanityItems.map(item => ({
  image: item.coverImage ? urlFor(item.coverImage).width(1200).quality(90).url() : fallbackItems[0].image,
  category: item.category,
  title: item.title,
  slug: item.slug,
  date: item.date
})) : fallbackItems;
---

<BaseLayout title="Fiodorow Photography | Fotograf Siedlce, Białystok, Warszawa">
  <Header currentPath="/" />
  
  <!-- Hero Section -->
  <Hero />
  
  <!-- Portfolio Section - Asymmetric Grid with Hover Effects -->
  <section class="py-20 md:py-32 bg-cream">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      
      <!-- Title -->
      <div class="text-center mb-16">
        <h2 class="font-serif text-2xl md:text-3xl tracking-[0.2em] uppercase text-charcoal mb-4">
          Portfolio
        </h2>
        <p class="text-charcoal-light text-sm max-w-md mx-auto">
          Odkryj nasze najnowsze realizacje pełne emocji i pięknych chwil
        </p>
      </div>
      
      <!-- Asymmetric Grid Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8">
        <!-- Left: Large Featured Image -->
        {portfolioItems[0] && (
          <a 
            href={`/portfolio/${portfolioItems[0].slug.current}`} 
            class="portfolio-item group block relative overflow-hidden lg:row-span-2"
            style="animation-delay: 0ms"
          >
            <div class="relative aspect-[3/4] lg:aspect-auto lg:h-full overflow-hidden">
              <img 
                src={portfolioItems[0].image}
                alt={portfolioItems[0].title}
                class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
                loading="eager"
              />
              
              <!-- Hover Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 via-charcoal/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              
              <!-- Hover Content -->
              <div class="absolute inset-0 flex flex-col justify-end p-6 md:p-8 translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500">
                <span class="text-[0.65rem] tracking-[0.25em] uppercase text-white/80 mb-2">
                  {categoryLabels[portfolioItems[0].category] || portfolioItems[0].category}
                </span>
                <h3 class="font-serif text-2xl md:text-3xl tracking-[0.1em] uppercase text-white">
                  {portfolioItems[0].title}
                </h3>
              </div>
            </div>
          </a>
        )}
        
        <!-- Right: Two Smaller Images Stacked -->
        <div class="flex flex-col gap-6 md:gap-8">
          {portfolioItems.slice(1, 3).map((item, index) => (
            <a 
              href={`/portfolio/${item.slug.current}`} 
              class="portfolio-item group block relative overflow-hidden flex-1"
              style={`animation-delay: ${(index + 1) * 100}ms`}
            >
              <div class="relative aspect-[4/3] lg:aspect-auto lg:h-full overflow-hidden">
                <img 
                  src={item.image}
                  alt={item.title}
                  class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
                  loading="lazy"
                />
                
                <!-- Hover Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 via-charcoal/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <!-- Hover Content -->
                <div class="absolute inset-0 flex flex-col justify-end p-5 md:p-6 translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500">
                  <span class="text-[0.65rem] tracking-[0.25em] uppercase text-white/80 mb-2">
                    {categoryLabels[item.category] || item.category}
                  </span>
                  <h3 class="font-serif text-xl md:text-2xl tracking-[0.1em] uppercase text-white">
                    {item.title}
                  </h3>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="text-center mt-12">
        <a href="/portfolio" class="btn-primary">
          Zobacz wszystkie
        </a>
      </div>
    </div>
  </section>
  
  <!-- About Teaser Section -->
  <section class="py-20 md:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20 items-center">
        
        <!-- Image -->
        <div class="order-2 md:order-1">
          <img 
            src="https://images.unsplash.com/photo-1503516459261-40c66117780a?w=800&q=80"
            alt="Fiodorow Photography - fotografowie"
            class="w-full h-[500px] object-cover"
            loading="lazy"
          />
        </div>
        
        <!-- Content -->
        <div class="order-1 md:order-2">
          <h2 class="section-title mb-6">O nas</h2>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-6">
            Jesteśmy zespołem pasjonatów fotografii, dla których każde zdjęcie to opowieść. 
            Specjalizujemy się w fotografii ślubnej, portretowej i reportażowej.
          </p>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-8">
            Działamy głównie w Siedlcach, Białymstoku i Warszawie, ale chętnie podróżujemy 
            za wyjątkowymi historiami w całej Polsce.
          </p>
          <a href="/o-nas" class="btn-primary">
            Poznaj nas bliżej
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 md:py-24 bg-cream-dark">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="section-title mb-6">
        Opowiedzcie nam swoją historię
      </h2>
      <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-10 max-w-xl mx-auto">
        Każda sesja to dla nas nowe wyzwanie i nowa przygoda. 
        Skontaktujcie się z nami i pozwólcie nam uwiecznić Wasze najważniejsze chwile.
      </p>
      <a href="/kontakt" class="btn-primary">
        Skontaktuj się
      </a>
    </div>
  </section>
  
  <Footer />
</BaseLayout>

<style>
  .portfolio-item {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
