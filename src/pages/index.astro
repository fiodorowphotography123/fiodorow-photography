---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Placeholder images - will be replaced with Sanity images
const heroImage = "https://images.unsplash.com/photo-1519741497674-611481863552?w=1920&q=80";

const portfolioItems = [
  {
    image: "https://images.unsplash.com/photo-1594463750939-ebb28c3f7f75?w=800&q=80",
    category: "Reportaż ślubny",
    title: "Joanna & Darek",
    slug: "joanna-darek"
  },
  {
    image: "https://images.unsplash.com/photo-1522673607200-164d1b6ce486?w=800&q=80",
    category: "Sesja narzeczeńska",
    title: "Natalia & Michał",
    slug: "natalia-michal"
  },
  {
    image: "https://images.unsplash.com/photo-1606216794074-735e91aa2c92?w=800&q=80",
    category: "Reportaż ślubny",
    title: "Amelia & Damian",
    slug: "amelia-damian"
  }
];
---

<BaseLayout title="Fiodorow Photography | Fotograf Siedlce, Białystok, Warszawa">
  <Header currentPath="/" />
  
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={heroImage}
        alt="Fotografia ślubna - para młoda"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="hero-overlay"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center text-white px-6">
      <h1 class="font-serif font-light tracking-[0.2em] mb-6">
        Tworzymy dla Was
      </h1>
      <p class="font-sans text-sm md:text-base tracking-[0.15em] mb-10 opacity-90 max-w-md mx-auto">
        Fotografię dopasowaną do Waszej historii.
      </p>
      <a href="/portfolio" class="btn-primary border-white text-white hover:bg-white hover:text-charcoal">
        Poznaj nas
      </a>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/70">
      <div class="w-px h-12 bg-white/30"></div>
    </div>
    
    <!-- Social links (left side) -->
    <div class="hidden md:flex absolute left-8 bottom-8 items-center gap-4 text-white/70 text-xs tracking-wider">
      <a href="https://facebook.com/fiodorowphotography" target="_blank" class="hover:text-white transition-colors">FB</a>
      <span class="w-8 h-px bg-white/30"></span>
      <a href="https://instagram.com/fiodorowphotography" target="_blank" class="hover:text-white transition-colors">IN</a>
    </div>
  </section>
  
  <!-- Portfolio Section -->
  <section class="section-cream py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start">
        
        <!-- Left: Title and description -->
        <div class="lg:sticky lg:top-32">
          <h2 class="section-title mb-6">Portfolio</h2>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed max-w-md mb-8">
            Odkryj więcej! Kliknij w poniższe kadry, aby zobaczyć skróty reportaży i sesji pełnych emocji.
          </p>
          <a href="/portfolio" class="btn-primary">
            Zobacz wszystkie
          </a>
        </div>
        
        <!-- Right: Asymmetric image grid -->
        <div class="space-y-8">
          <!-- Large image -->
          <div class="portfolio-card">
            <a href={`/portfolio/${portfolioItems[0].slug}`}>
              <img 
                src={portfolioItems[0].image}
                alt={portfolioItems[0].title}
                class="w-full h-[500px] object-cover"
                loading="lazy"
              />
            </a>
          </div>
          
          <!-- Two smaller images side by side -->
          <div class="grid grid-cols-2 gap-4">
            <div class="portfolio-card">
              <a href={`/portfolio/${portfolioItems[1].slug}`}>
                <img 
                  src={portfolioItems[1].image}
                  alt={portfolioItems[1].title}
                  class="w-full h-[300px] object-cover"
                  loading="lazy"
                />
              </a>
            </div>
            <div class="portfolio-card mt-12">
              <a href={`/portfolio/${portfolioItems[2].slug}`}>
                <img 
                  src={portfolioItems[2].image}
                  alt={portfolioItems[2].title}
                  class="w-full h-[300px] object-cover"
                  loading="lazy"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- About Teaser Section -->
  <section class="py-20 md:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20 items-center">
        
        <!-- Image -->
        <div class="order-2 md:order-1">
          <img 
            src="https://images.unsplash.com/photo-1503516459261-40c66117780a?w=800&q=80"
            alt="Fiodorow Photography - fotografowie"
            class="w-full h-[500px] object-cover"
            loading="lazy"
          />
        </div>
        
        <!-- Content -->
        <div class="order-1 md:order-2">
          <h2 class="section-title mb-6">O nas</h2>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-6">
            Jesteśmy zespołem pasjonatów fotografii, dla których każde zdjęcie to opowieść. 
            Specjalizujemy się w fotografii ślubnej, portretowej i reportażowej.
          </p>
          <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-8">
            Działamy głównie w Siedlcach, Białymstoku i Warszawie, ale chętnie podróżujemy 
            za wyjątkowymi historiami w całej Polsce.
          </p>
          <a href="/o-nas" class="btn-primary">
            Poznaj nas bliżej
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Gallery Section -->
  <section class="py-20 md:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <div class="text-center mb-16">
        <h2 class="section-title mb-4">Ostatnie Realizacje</h2>
        <p class="text-charcoal-light text-sm max-w-md mx-auto">
          Wybrane kadry z naszych ostatnich sesji i reportaży ślubnych
        </p>
      </div>
      
      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {portfolioItems.map((item) => (
          <a href={`/portfolio/${item.slug}`} class="portfolio-card group">
            <img 
              src={item.image}
              alt={item.title}
              class="w-full h-[450px] object-cover"
              loading="lazy"
            />
            <div class="mt-4">
              <span class="text-[0.65rem] tracking-[0.2em] uppercase text-charcoal-light">
                {item.category}
              </span>
              <h3 class="font-serif text-lg tracking-[0.1em] uppercase text-charcoal mt-1">
                {item.title}
              </h3>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 md:py-24 bg-cream-dark">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="section-title mb-6">
        Opowiedzcie nam swoją historię
      </h2>
      <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-10 max-w-xl mx-auto">
        Każda sesja to dla nas nowe wyzwanie i nowa przygoda. 
        Skontaktujcie się z nami i pozwólcie nam uwiecznić Wasze najważniejsze chwile.
      </p>
      <a href="/kontakt" class="btn-primary">
        Skontaktuj się
      </a>
    </div>
  </section>
  
  <Footer />
</BaseLayout>
