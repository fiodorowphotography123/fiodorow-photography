---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Placeholder reportaże - will come from Sanity
const reportaze = [
  {
    image: "https://images.unsplash.com/photo-1519741497674-611481863552?w=800&q=80",
    title: "Joanna & Darek",
    date: "8 czerwca 2024",
    location: "Siedlce",
    slug: "joanna-darek",
    preview: "Piękny, słoneczny dzień pełen emocji i radości..."
  },
  {
    image: "https://images.unsplash.com/photo-1606216794074-735e91aa2c92?w=800&q=80",
    title: "Amelia & Damian",
    date: "22 lipca 2024",
    location: "Warszawa",
    slug: "amelia-damian",
    preview: "Elegancki ślub w sercu stolicy..."
  },
  {
    image: "https://images.unsplash.com/photo-1591604466107-ec97de577aff?w=800&q=80",
    title: "Karolina & Piotr",
    date: "10 sierpnia 2024",
    location: "Białystok",
    slug: "karolina-piotr",
    preview: "Romantyczna ceremonia w otoczeniu natury..."
  }
];
---

<BaseLayout 
  title="Reportaże ślubne | Fiodorow Photography" 
  description="Pełne reportaże ślubne z ceremonii i wesela. Fotograf ślubny Siedlce, Białystok, Warszawa."
>
  <Header currentPath="/reportaze" />
  
  <!-- Reportaże Section -->
  <section class="pt-32 pb-20 md:pt-40 md:pb-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      
      <!-- Title -->
      <div class="text-center mb-16">
        <h1 class="section-title mb-4">Reportaże</h1>
        <p class="text-charcoal-light text-sm md:text-base max-w-lg mx-auto">
          Każdy reportaż to kompletna historia Waszego dnia. Zapraszamy do obejrzenia 
          pełnych galerii z wybranych ceremonii i wesel.
        </p>
      </div>
      
      <!-- Reportaże List -->
      <div class="space-y-16">
        {reportaze.map((item, index) => (
          <a 
            href={`/reportaze/${item.slug}`} 
            class:list={[
              "grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center group",
              index % 2 === 1 ? "lg:flex-row-reverse" : ""
            ]}
          >
            <!-- Image -->
            <div class:list={[
              "overflow-hidden",
              index % 2 === 1 ? "lg:order-2" : "lg:order-1"
            ]}>
              <img 
                src={item.image}
                alt={item.title}
                class="w-full h-[400px] lg:h-[500px] object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              />
            </div>
            
            <!-- Content -->
            <div class:list={[
              "lg:py-8",
              index % 2 === 1 ? "lg:order-1 lg:text-right" : "lg:order-2"
            ]}>
              <span class="text-[0.65rem] tracking-[0.2em] uppercase text-olive">
                Reportaż ślubny
              </span>
              <h2 class="font-serif text-2xl md:text-3xl tracking-[0.15em] uppercase text-charcoal mt-2 mb-4">
                {item.title}
              </h2>
              <div class="flex items-center gap-4 text-charcoal-light text-sm mb-6" class:list={[index % 2 === 1 ? "lg:justify-end" : ""]}>
                <span>{item.date}</span>
                <span class="w-4 h-px bg-charcoal/30"></span>
                <span>{item.location}</span>
              </div>
              <p class="text-charcoal-light text-sm leading-relaxed mb-8 max-w-md" class:list={[index % 2 === 1 ? "lg:ml-auto" : ""]}>
                {item.preview}
              </p>
              <span class="inline-flex items-center gap-2 text-xs tracking-[0.15em] uppercase text-charcoal group-hover:text-olive transition-colors">
                Zobacz reportaż
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 md:py-24 section-cream">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="section-title mb-6">Twój reportaż ślubny</h2>
      <p class="text-charcoal-light text-sm md:text-base leading-relaxed mb-10 max-w-xl mx-auto">
        Opowiedzcie nam o Waszym ślubie, a my stworzymy dla Was niepowtarzalną historię w zdjęciach.
      </p>
      <a href="/kontakt" class="btn-primary">
        Zarezerwuj termin
      </a>
    </div>
  </section>
  
  <Footer />
</BaseLayout>
