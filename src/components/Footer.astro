---
const currentYear = new Date().getFullYear();

const services = [
  {
    icon: "calendar",
    title: "Zarezerwuj Termin",
    description: "Skontaktuj się z nami już dziś, aby potwierdzić dostępność i omówić szczegóły Waszego wyjątkowego dnia."
  },
  {
    icon: "camera",
    title: "Reportaż",
    description: "Uchwytujemy naturalne emocje, piękne detale i ulotne chwile, tworząc autentyczną opowieść o Waszym ślubie."
  },
  {
    icon: "edit",
    title: "Edycja i Retusz",
    description: "Profesjonalna obróbka zdjęć - korekcja kolorów, retusz skóry i stylizacja każdego kadru."
  }
];
---

<!-- Services Section -->
<section class="section-olive py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8 text-center">
      {services.map((service) => (
        <div class="flex flex-col items-center">
          <!-- Icon -->
          <div class="w-16 h-16 mb-6 flex items-center justify-center border border-white/30 rounded-sm">
            {service.icon === "calendar" && (
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            )}
            {service.icon === "camera" && (
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            )}
            {service.icon === "edit" && (
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            )}
          </div>
          
          <!-- Title -->
          <h3 class="font-serif text-sm tracking-[0.2em] uppercase text-white mb-4">
            {service.title}
          </h3>
          
          <!-- Description -->
          <p class="text-white/80 text-sm leading-relaxed max-w-xs">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Main Footer -->
<footer class="bg-white py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 items-center text-center">
      
      <!-- Social Links -->
      <div>
        <h4 class="font-serif text-sm tracking-[0.2em] uppercase text-charcoal mb-6">
          Obserwuj nas
        </h4>
        <div class="flex items-center justify-center gap-6">
          <a 
            href="https://facebook.com/fiodorowphotography" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-charcoal hover:text-olive transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <span class="w-8 h-px bg-charcoal/30"></span>
          <a 
            href="https://instagram.com/fiodorowphotography" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-charcoal hover:text-olive transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
        </div>
        <a 
          href="mailto:fiodorowphotography@gmail.com" 
          class="block mt-4 text-sm text-charcoal-light hover:text-olive transition-colors"
        >
          fiodorowphotography@gmail.com
        </a>
      </div>
      
      <!-- Logo -->
      <div class="flex flex-col items-center">
        <span class="font-serif text-2xl tracking-[0.3em] text-charcoal uppercase">
          Fiodorow
        </span>
        <span class="font-sans text-[0.65rem] tracking-[0.2em] text-charcoal-light uppercase">
          photography
        </span>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="font-serif text-sm tracking-[0.2em] uppercase text-charcoal mb-6">
          Skontaktuj się
        </h4>
        <div class="space-y-2">
          <a 
            href="tel:+48600872127" 
            class="block text-sm text-charcoal-light hover:text-olive transition-colors"
          >
            +48 600 872 127
          </a>
          <a 
            href="tel:+48515651646" 
            class="block text-sm text-charcoal-light hover:text-olive transition-colors"
          >
            +48 515 651 646
          </a>
        </div>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-charcoal/10 text-center">
      <p class="text-xs text-charcoal-light tracking-wider">
        © {currentYear} Copyright - Fiodorow Photography
      </p>
    </div>
  </div>
</footer>
